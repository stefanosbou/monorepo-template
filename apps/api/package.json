{
  "name": "@humblebrag/api",
  "scripts": {
    "dev": "TZ=UTC PORT=3003 bun run --hot src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "find src -name '*.test.ts' -o -name '*.spec.ts' | grep -q . && bun test src || echo 'No tests yet'"
  },
  "exports": {
    "./trpc/routers/_app": "./src/trpc/routers/_app.ts",
    "./ai/types": "./src/ai/types.ts"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.2",
    "@hono/zod-openapi": "^1.2.1",
    "@humblebrag/ai": "workspace:*",
    "@humblebrag/db": "workspace:*",
    "@humblebrag/logger": "workspace:*",
    "@scalar/hono-api-reference": "^0.9.40",
    "@trpc/server": "^11.9.0",
    "hono": "^4.11.9",
    "hono-rate-limiter": "^0.5.3",
    "jose": "^6.1.3",
    "superjson": "^2.2.6",
    "zod": "catalog:zod"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "catalog:typescript"
  }
}
